<h5>Dashboard</h5>
<h4>Welcome, {{name}}</h4>

<div class="content">
    <form action="/send/stats" method="post">
        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="email" id="email">
                <label for="email"></label>
                <button type="submit" onclick="M.toast({html: 'Email sent!', classes: 'rounded'})" class="btn green">Email me my stats</button>
            </div>
        </div>
    </form>
    <div class="container-fluid">
        <div class="dash-row">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Languages</span>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Editors</span>
                    <canvas id="chartEditors"></canvas>
                </div>
            </div>
        </div>
        <div class="dash-row">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Operating Systems</span>
                    <canvas id="chartOS"></canvas>
                </div>
            </div>
            <div id="pulse"></div>
        </div>
    </div>
</div>


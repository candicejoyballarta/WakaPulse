<h3>Add Goal</h3>
<div class="row">
    <form action="/goals" method="post" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input type="text" name="title" id="title">
                <label for="title">Goal Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <select name="goalType" id="goalType">
                    <option value="Coding" selected>Coding</option>
                    <option value="Building">Building</option>
                    <option value="Learning">Learning</option>
                    <option value="Typing">Typing</option>
                </select>
                <label for="goalType">What goal do you want to Create?</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <select name="frequency" id="frequency">
                    <option value="daily" selected>Daily</option>
                    <option value="weekly">Weekly</option>
                </select>
                <label for="frequency">Frequency</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Create goal</button>
        <a href="/goals" class="btn btn-danger" id="cancel-goal"><i class="fa fa-times"></i> Cancel</a>
    </form>
</div>



